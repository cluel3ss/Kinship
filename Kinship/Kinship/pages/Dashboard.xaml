<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kinship.pages.Dashboard"
             xmlns:controls="clr-namespace:Xamd.ImageCarousel.Forms.Plugin.Abstractions;assembly=Xamd.ImageCarousel.Forms.Plugin.Abstractions"
             Title="Dashboard">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="10,10,10,10">
                <StackLayout x:Name="publicDashboard">

                    <controls:ImageCarousel x:Name="imgSlider" HeightRequest="300" WidthRequest="300" />
                    
                    <StackLayout Padding="5,5,5,5">
                        <Button Text="Raise an Issue" Clicked="RaiseNewIssueAsync"/>
                        <Button Text="Ongoing Events" Clicked="ListofEventsAsync"/>
                        <Button Text="List of Issues" Clicked="ListofIssuesAsync"/>
                    </StackLayout>
                </StackLayout>
                <StackLayout x:Name="ngoDashboard" IsVisible="false">

                    <controls:ImageCarousel x:Name="imgSlider1" HeightRequest="300" WidthRequest="300" />

                    <StackLayout Padding="5,5,5,5">
                        <Button Text="Ongoing Events" Clicked="ListofEventsAsync"/>
                        <Button Text="List of Issues" Clicked="ListofIssuesAsync"/>
                        <Button Text="Create an Event" Clicked="CreateEventAsync"/>
                    </StackLayout>
                </StackLayout>
                <StackLayout  x:Name="authorityDashboard" IsVisible="false">

                    <controls:ImageCarousel x:Name="imgSlider2" HeightRequest="300" WidthRequest="300" />

                    <StackLayout Padding="5,5,5,5">
                        <Button Text="Ongoing Events" Clicked="ListofEventsAsync"/>
                        <Button Text="List of Issues" Clicked="ListofIssuesAsync"/>
                        <Button Text="Engagements" Clicked="EngagementsClickedAsync"/>
                        <Button Text="Notification" Clicked="NotificationClickedAsync"/>
                    </StackLayout>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>