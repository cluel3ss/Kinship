<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kinship.pages.Public.ListofEvents">
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="eventsView" ItemSelected="EventSelectedAsync" HasUnevenRows="true">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <!--<TextCell  Text="{Binding Name}" Detail="{Binding Num}"/>-->
                        <!--<ImageCell Text="{Binding event_name}" Detail="{Binding event_date}" ImageSource="{Binding imgsource}"></ImageCell>-->
                        <ImageCell Text="{Binding event_name}" Detail="{Binding event_date}"></ImageCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>