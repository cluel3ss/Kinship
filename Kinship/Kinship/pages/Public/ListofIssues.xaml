<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kinship.pages.Public.ListofIssues">
    <ContentPage.Content>
        <StackLayout Padding="5,5,5,5">
            <ListView x:Name="NGOEventsList" ItemSelected="IssueSelectedAsync" HasUnevenRows="true">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <!--<ImageCell Text="{Binding address}" Detail="{Binding rating}" ImageSource="{Binding photo}"/>-->
                        <!--<ImageCell Text="{Binding address}" Detail="{Binding rating}" ImageSource="{Binding status}"></ImageCell>-->
                        <ViewCell>
                            <StackLayout >
                                
                                <StackLayout Orientation="Horizontal" >
                                    <Image Source="main.jpg" WidthRequest="40" HeightRequest="40"  HorizontalOptions="StartAndExpand" />
                                    <Label Text="{Binding rating, StringFormat='rating: {0}'}" HorizontalOptions="EndAndExpand" FontSize="Small" />

                                </StackLayout>
                                <Label Text="{Binding address, StringFormat='Address: {0}'}" FontSize="Medium" TextColor="Black" HorizontalOptions="CenterAndExpand"/>
                                
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
